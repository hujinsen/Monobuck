{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "monobuck2",
  "version": "0.1.0",
  "identifier": "com.fqcd.monobuck2",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "monobuck 莫巴克",
        "width": 1200,
        "height": 760,
        "resizable": true,
        "minWidth": 960,
        "minHeight": 640,
        "devtools": true
      },
      {
        "label": "toast",
        "title": "Monobuck Toast",
        "width": 380,
        "height": 160,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": true,
        "focus": false,
        "url": "toast.html",
        "devtools": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/mb_blue_128x128.ico"
    ],
    "resources": [
      "resources/websocket_server.exe"
    ]
  }
}